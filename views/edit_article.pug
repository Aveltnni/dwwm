extends layout

block content

  h1 #{title}
  form(method='POST', action='/articles/edit/'+article._id)
    -data = data || {}
      .form-group
        label Title:
        input.form-control(name='title', type='text', value=article.title)
      .form-group
        label Author:
        input.form-control(readonly='' name='author', type='text', value=data.name)
      .form-group
        label Body:
        textarea.form-control(name='body')= article.body
      br
      input.btn.btn-primary(type='submit', value='Submit')
      a.btn.btn-default(href='/articles/articles') Cancel
