extends layout

block content
  h1= article.title
  br
  h5 Written by #{article.author}
  br
  p= article.body
  br
  br
  hr
  a.btn.btn-warning(href='/articles/edit/'+article._id) Edit
  a.btn.btn-default(href='/articles/articles') Cancel
  a.btn.btn-danger.delete-article(href='/articles/articles', data-id=article._id) Delete